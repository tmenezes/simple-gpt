<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<AssemblyVersion>1.0.2</AssemblyVersion>
	<Version>$(AssemblyVersion)</Version>
    <Title>SimpleGPT.Core</Title>
    <Authors>tmenezes</Authors>
    <PackageProjectUrl>https://github.com/tmenezes/simple-gpt</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/tmenezes/simple-gpt</RepositoryUrl>
    <PackageTags>chatgpt; gpt; llm; openai</PackageTags>
    <Description>Simplistic library for adding ChatGPT in your application for problem solving and context evaluation/recommendation.</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Azure.AI.OpenAI" Version="1.0.0-beta.13" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
	</ItemGroup>

</Project>
